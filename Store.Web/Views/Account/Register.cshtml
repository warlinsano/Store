@model Store.Web.Models.AddUserViewModel
@{
    ViewData["Title"] = "Register";
    //Layout = null;
}

<!-- <div class="register-page"> -->
<style>
    #preview img {
        border-radius: 50%;
        width: 200px;
        height: 200px;
        /*centra la imagen*/
        display: block;
        margin: auto;
    }
</style>
<div class="register-box">
    <div class="register-logo">
        @*<a href="../../index2.html"><b>Admin</b>LTE</a>*@
    </div>

    <div class="register-box-body">
        <p class="login-box-msg">Register a new membership</p>

        <form asp-action="Register"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="" id="preview" >
                    <img class="img-circle" src="~/img/no-profile.png" height="50" width="50" />
                </div>
            </div>
            <div class="form-group">
                <input type="file" id="Image" name="Image" class="form-control" accept="image/png, .jpeg, .jpg, image/gif" />
            </div>

            <partial name="_User" />

            @*<div class="form-group has-feedback">
                 <input type="text" class="form-control" placeholder="Full name">
                 <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>*@
            <div class="form-group has-feedback">
                <input asp-for="Username" type="email" class="form-control" placeholder="Email">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input asp-for="PasswordConfirm" type="password" class="form-control" placeholder="Retype password">
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input asp-for="termsAccept" type="checkbox"> I agree to the <a href="#">terms</a>
                            @*<input asp-for="termsAccept" type="checkbox" class="form-check-input" />
                                <label asp-for="termsAccept" class="form-check-label">Remember Me?</label>*@
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <div class="social-auth-links text-center">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                <i class="fa fa-facebook"></i> Sign up using
                Facebook
            </a>
            <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                <i class="fa fa-google-plus"></i> Sign up using
                Google+
            </a>
        </div>

        <a asp-action="Login" class="text-center">I already have a membership</a>

        <div class="text-success">
            <p>
                @ViewBag.Message
            </p>
        </div>

    </div>
    <!-- /.form-box -->
</div>
<!-- /.register-box -->
<!-- </div> -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- InputMask -->
    <script src="~/plugins/input-mask/jquery.inputmask.js"></script>
    <script src="~/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
    <script src="~/plugins/input-mask/jquery.inputmask.extensions.js"></script>
    <!-- Imgage preview -->
    <script src="~/js/Img_preview.js"></script>

    <script>
                $(function () {
                    $('input').iCheck({
                        checkboxClass: 'icheckbox_square-blue',
                        radioClass: 'iradio_square-blue',
                        increaseArea: '20%' /* optional */
                    });
                    //mask  PhoneNumber
                    $('#PhoneNumber').inputmask('+9(999)-999-9999')
                    //mask  Cedula or Document Id
                    $('#Document').inputmask('999-9999999-9')

                });
    </script>
}

