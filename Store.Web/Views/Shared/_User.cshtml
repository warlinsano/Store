@model Store.Web.Models.EditUserViewModel

<div class="form-group has-feedback">
    @*<label asp-for="Document" class="control-label"></label> fa-credit-card*@
    <input asp-for="Document" class="form-control" placeholder="Document" id="Document" />
    <span class="fa fa-newspaper-o form-control-feedback"></span>
    <span asp-validation-for="Document" class="text-danger"></span>
</div>

<div class="form-group has-feedback">
    @*<label asp-for="FirstName" class="control-label"></label>*@
    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
    <span class="glyphicon glyphicon-user form-control-feedback"></span>
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>

<div class="form-group has-feedback">
    @*<label asp-for="LastName" class="control-label"></label>*@
    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
    <span class="glyphicon glyphicon-user form-control-feedback"></span>
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>

<div class="form-group">
    @*<label asp-for="Address" class="control-label"></label>*@
    <textarea asp-for="Address" id="Address" class="form-control" placeholder="Address"></textarea>
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="form-group has-feedback">
    @*<label asp-for="PhoneNumber" class="control-label"></label>*@
    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" id="PhoneNumber" />
    <span class="fa fa-phone form-control-feedback"></span>
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>
