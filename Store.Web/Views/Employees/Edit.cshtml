@using (Html.BeginForm("Edit", "Employees", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    <div class="form-group">
        <div class="col-md-10 " id="preview">
            @Html.HiddenFor(model => model.Photo)

            @if (!String.IsNullOrEmpty(Model.PhotoPath))
            {
                <img id="img" class="img-profile rounded-circle" src="@Url.Content(Model.PhotoPath)" height="50" width="50" />
            }
            else if (!String.IsNullOrEmpty(Model.PhotoBase64))
            {
                <img id="img" class="img-profile rounded-circle" src="@Model.PhotoBase64" height="50" width="50" />
            }
            else
